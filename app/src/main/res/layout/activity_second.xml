<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[3]" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="236dp"
            android:layout_height="51dp" android:id="@+id/textName"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="87dp" android:layout_marginEnd="88dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="236dp"
            android:layout_height="48dp" android:id="@+id/textEmail"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="87dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="88dp" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/textName"/>
    <TextView
            android:layout_width="236dp"
            android:layout_height="48dp" android:id="@+id/textId"
            android:layout_marginEnd="88dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="87dp"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/textEmail"/>
</androidx.constraintlayout.widget.ConstraintLayout>